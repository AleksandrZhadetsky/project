@model crowdfunding.Data.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string photoPath = ((!string.IsNullOrEmpty(Model.PhotoPath)) ? ("~/uploads/" + Model.PhotoPath) : "~/uploads/" + "noimage.png");
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img class="img-thumbnail" src="@photoPath" alt="photo" asp-append-version="true" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<div>
    <form method="get">
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-outline-info" asp-controller="Users" asp-action="Edit" name="userId">Edit</button>
    </form>
</div>
