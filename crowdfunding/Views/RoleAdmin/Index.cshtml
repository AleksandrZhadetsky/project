@model IList<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <form method="get">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button class="btn btn-outline-info" type="submit" asp-controller="RoleAdmin" asp-action="Edit">Edit</button>
                    </form>
                    <form method="delete">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button class="btn btn-outline-warning" type="submit" asp-controller="RoleAdmin" asp-action="Delete">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="get">
    <button class="btn btn-outline-info" type="submit" asp-controller="RoleAdmin" asp-action="Create">Create</button>
</form>
